{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "pdf-upload/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "app.py" },
    { "src": "/(.*)", "dest": "pdf-upload/build/$1" }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key",
    "GOOGLE_API_KEY": "@google_api_key"
  }
}
